{
  "name": "congress-alpha",
  "description": "Congress Alpha: Track stock trades made by members of Congress in real-time. Transparency in congressional trading through comprehensive data analysis.",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "ingest-prices": "tsx scripts/ingestPrices.ts",
    "ingest-csv": "tsx scripts/ingestFromCsv.ts --root ./us --days 1825 --per D",
    "export-csv": "tsx scripts/exportCsvFromLocal.ts --root ./us --days 1825 --limit 50 --out ./exports/stock_prices_export.csv",
    "export-csv-from-assets": "tsx scripts/exportCsvFromAssetsCsv.ts --assets ./exports/Assets_rows.csv --root ./us --days 1095 --out ./exports/stock_prices_export.csv",
    "split-export-json": "tsx scripts/splitExportToJson.ts --in ./exports/stock_prices_export.csv --out ./public/price-data",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^4.1.0",
    "install": "^0.13.0",
    "next": "15.3.5",
    "react": "^19.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "csv-parse": "^5.5.6",
    "fast-glob": "^3.3.2",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "prisma": "^6.11.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5"
  }
}